<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.pq2.zombiesinmycity"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ZombiesInMyCityApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        <uses-library
            android:name="com.google.android.maps"
            android:required="true" />
        
        <activity
            android:name=".activities.ZombiesInMyCityActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.IntroActivity" >
        </activity>
        <activity android:name=".activities.AddBaseActivity" >
        </activity>
        <activity android:name=".activities.RunMissionActivity" >
        </activity>
        <activity android:name=".activities.AllMyBaseActivity" >
        </activity>
        <activity android:name=".activities.PickMissionActivity"></activity>
    </application>

</manifest>